mixin articleCard(article= {})
  .article
    //- h3.title.title--article
    //-   a(href=`/${article.slug}/index.html`) #{article.title}
    .article__hero
      .article__actions
          
      //- a(href=`/${article.slug}/index.html`)
      if (article.slug === "playground/logo")
        a(href=`/${article.slug}/`)
          img(src=`./img/${article.photo || 'article.png'}`)
      else
        a(href="/")
          img(src=`./img/${article.photo || 'article.png'}`)
    .article__details
      if (article.text)
        p !{article.text.split(' ').slice(0, 60).join(' ')}
          if (article.slug === "playground/logo")
            a(href=`/${article.slug}/`) #{"[...]"}
          else
            a(href="/") #{"[...]"}
